@model proclena_backend.Models.Service

@{
    ViewBag.Title = "Details";
}

<!-- Bootstrap Card Container -->
<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <div class="d-flex align-items-center mb-4">            
            <h4 class="card-title mb-0 mx-auto text-center flex-grow-1">Service Details</h4>
        </div>

        <div>
            <h4>Service Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ImageData)
                </dt>
                <dd class="col-sm-8">
                    @if (Model.ImageData != null && Model.ImageData.Length > 0)
                    {
                        var base64Image = Convert.ToBase64String(Model.ImageData);
                        var imageSrc = $"data:image/jpeg;base64,{base64Image}";
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)" alt="Current Image" class="img-fluid" style="max-width: 100%; max-height: 200px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="form-actions text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-lg">Edit</a> |
            <a href="@Url.Action("Index", "Services")" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    </div>
</div>
